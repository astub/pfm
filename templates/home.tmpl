{{define "content"}}
<div class="content">

	<div class="e-box rounded">
	
		<div class="pure-g ">
	
		<div class="pure-u-1 pure-u-md-1-5">
			<ul class="pure-menu-list" id="e-list"></ul>
		</div>
		
		<div class="i-box pure-u-1 pure-u-md-4-5">
			
			<div class="pure-g info-txt">
				<div class="pure-u-1 pure-u-md-3-5">
					<h2 id="title"></h2>
					<h3 id="date"></h3>
					<p id="detail"></p>
				</div>
			
				<div class="pure-u-1 pure-u-md-2-5">	
					<img id="image" class="pure-img center" src="" alt="">
				</div>	
				
			</div>
			
		</div>
		
		
		</div>
		
	</div>

	<nav class="pure-g ">
	
		<div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-2 pure-u-lg-1-4">
			<div class="l-box rounded">
				<a href="/eventnews">
					<h3>Calendar and News</h3>
					<img class="pure-img l-box-img center" src="/imgs/calendar.png" alt="">
					<p>Browse event calendars or past news articles.</p>
				</a>
			</div>
		</div>

		<div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-2 pure-u-lg-1-4">
			<div class="l-box rounded">
				<a href="/info">
					<h3>General Information</h3>
					<img class="pure-img l-box-img center" src="/imgs/newsbb.png" alt="By Sylwia Bartyzel from unsplash.com">
					<p>Information for fly-in's or the aerodrome's daily operations.</p>
				</a>
			</div>
		</div>

		<div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-2 pure-u-lg-1-4">
			<div class="l-box rounded">
				<a href="/exhibits">
					<h3>Museum Exhibits</h3>
					<img class="pure-img l-box-img center" src="/imgs/plane.png" alt="By Sylwia Bartyzel from unsplash.com">
					<p>Documented resources for our exhibits and projects.</p>
				</a>
			</div>
		</div>

		<div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-2 pure-u-lg-1-4">
			<div class="l-box rounded">
				<a href="/media">
					<h3>Media</h3>
					<img class="pure-img l-box-img center" src="/imgs/computer.png" alt="By Sylwia Bartyzel from unsplash.com">
					<p>Watch and browse fun and informative media.</p>
				</a>
			</div>
		</div>
			
	</nav>

